{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es6",
    "module": "CommonJS",
    "strict": true,
    "lib": ["es2021"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false 
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
